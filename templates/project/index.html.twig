{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}
    <h1>Mes projets</h1>
    {% for project in projects %}
        <div class="card-content">
            <input type="text" class="form-control col-4" data-input-domain="{{ project.id }}" value="{{ project.domain }}">
            <button class="btn btn-success" data-project-id="{{ project.id }}">
                Cr√©er
            </button>
            <br>
            <a href="{{ path("app_project_show", {'id': project.id}) }}" class="btn btn-success">Voir</a>
            <a href="{{ path("app_project_edit", {'id': project.id}) }}" class="btn btn-primary">Modifier</a>
            <a href="{{ path("app_project_delete", {'id': project.id}) }}" class="btn btn-danger">Supprimer</a>
        </div>
    {% endfor %}
{% endblock %}

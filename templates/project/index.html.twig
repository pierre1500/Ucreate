{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}
    <h1>Mes projets</h1>
    {% for project in projects %}
        {{ form_start(form, {'action': path('app_submit_form', {'id': project.id})}) }}
        {{ form_row(form.domain) }}
        <button type="submit" class="btn btn-success" data-project-id="{{ project.id }}">Cr√©er</button>
        {{  form_end(form) }}
        <p>{{ project.state }}</p>
        <br>
        <a href="{{ path("app_project_show", {'id': project.id}) }}" class="btn btn-success">Voir</a>
        <a href="{{ path("app_project_edit", {'id': project.id}) }}" class="btn btn-primary">Modifier</a>
        <a href="{{ path("app_project_delete", {'id': project.id}) }}" class="btn btn-danger">Supprimer</a>
    {% endfor %}
{% endblock %}

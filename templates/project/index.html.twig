{% extends 'base.html.twig' %}
{% block stylesheets%}
    <link rel="stylesheet" href="{{ asset( 'css/project.css') }}">

{% endblock stylesheets %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5">Mes projets</h1>
        <div class="project-card">
            {% for project in projects %}
                <div class="card-content_project">
                    <div class="content_project">
                        <div class="imgBx_project">
                            <img src="{{ asset('assets/image_site' ~ project.template.image) }}" alt="image du template">
                        </div>
                    </div>
                    <ul class="sci_project">
                        <div class="liste">
                            <li>
                                <a href="{{ path("app_project_show", {'id': project.id}) }}" class="btn btn-success"><i class="fa-solid fa-eye"></i></a>
                            </li>
                            <li>
                                <a href="{{ path("app_project_edit", {'id': project.id}) }}" class="btn btn-primary"><i class="fa-solid fa-file-pen"></i></a>
                            </li>
                            <li>
                                <a href="{{ path("app_project_delete", {'id': project.id}) }}" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                            </li>
                        </div>
                        <li class="domain">
                            <input type="text" data-input-domain="{{ project.id }}" value="{{ project.domain }}" placeholder="nom de domaine">
                            <button class="" data-project-id="{{ project.id }}">
                                Cr√©er
                            </button>
                        </li>
                    </ul>

                </div>

            {% endfor %}
        </div>
    </div>

{% endblock %}
